@model MvcOnlineTicariOtomasyon.Models.Sinfilar.FaturaKalem

@{
    ViewData["Title"] = "YeniKalem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Yeni Kalem Ekle</h1>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.FaturaKalemAciklama)
    @Html.TextBoxFor(x => x.FaturaKalemAciklama, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.FaturaKalemMiktar)
    @Html.TextBoxFor(x => x.FaturaKalemMiktar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.FaturaKalemBirimFiyat)
    @Html.TextBoxFor(x => x.FaturaKalemBirimFiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.FaturaKalemTutar)
    @Html.TextBoxFor(x => x.FaturaKalemTutar, new { @class = "form-control" })
    <br />    
    <button class="btn btn-success">Ekle</button>
</form>
