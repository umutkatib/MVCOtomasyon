@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.SatisHareket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between mt-3 mb-5">
    <h3>Satış Hareket Listesi</h3>
    <a href="/Satis/SatisYap" class="btn btn-success w-25">Yeni Satış Yap <i class="fas fa-angle-double-up"></i></a>
</div>

<table id="tbl1" class="table table-striped">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.SatisHareketAdet</td>
            <td>@item.SatisHareketFiyat</td>
            <td>@item.SatisHareketToplamTutar</td>
            <td>@item.SatisHareketTarih.ToString("dd/MM/yyyy")</td>
            <td><a href="/Satis/SatisGetir/@item.SatisHareketID" class="btn btn-warning"><i class="fas fa-edit"></i></a></td>
            <td><a href="/Satis/SatisDetay/@item.SatisHareketID" class="btn btn-outline-primary"><i class="fas fa-info-circle"></i></a></td>
        </tr>
    }
</table>

