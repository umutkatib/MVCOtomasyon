@model MvcOnlineTicariOtomasyon.Models.Sinfilar.Kategori

@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-folder-plus"></i> Yeni Kategori Ekle</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    @Html.LabelFor(x => x.KategoriAd, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control", placeholder = "Kategori adını girin" })
                    </div>
                </div>
                <div class="text-center mt-3">
                    <button id="btnEkle" type="submit" class="btn btn-success px-4 py-2">
                        <i class="fas fa-check"></i> Kategori Ekle
                    </button>
                    <a href="/Kategori" class="btn btn-danger px-4 py-2 ms-2">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
                        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" 
                        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                <script>
                    $("#btnEkle").click(function (e) {
                        e.preventDefault();

                        Swal.fire({
                            position: "bottom-end",
                            icon: "success",
                            title: "Kategori Eklendi",
                            showConfirmButton: false,
                            timer: 1500,
                            width: '200px', 
                            height: '100px',
                            padding: '10px', 
                            timerProgressBar: true,
                            didClose: () => {
                                $("form").submit();
                            }
                        });
                    });

                </script>
            </form>
        </div>
    </div>
</div>
