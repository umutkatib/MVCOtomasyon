@model MvcOnlineTicariOtomasyon.Models.Sinfilar.SatisHareket
@{
    ViewData["Title"] = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Satış Yap</h1>
<br />

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.UrunID, new { @class = "form-label fw-bold" })
                <input type="text" name="UrunID" value="@ViewBag.dgr2" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.PersonelID, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-select p-1" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.CariID, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(x => x.CariID, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.SatisHareketToplamTutar, new { @class = "form-label fw-bold" })
                <input type="text" id="toplam" value="0" name="SatisHareketToplamTutar" class="form-control" readonly/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.SatisHareketFiyat, new { @class = "form-label fw-bold" })
                <input type="text" id="fiyat" onkeyup="toplamHesapla()" name="SatisHareketFiyat" value="@ViewBag.dgr3" class="form-control" />
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(x => x.SatisHareketAdet, new { @class = "form-label fw-bold" })
                <input type="number" id="adet" onkeyup="toplamHesapla()" name="SatisHareketAdet" class="form-control" min="0" placeholder="Adet Girin" />
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <button type="submit" class="btn btn-success px-4 py-2">
            <i class="fas fa-plus"></i> Satış Yap
        </button>
    </div>
</form>

<script>
    function toplamHesapla() {
        var adet = document.querySelector("#adet").value;
        var fiyat = document.querySelector("#fiyat").value;
        var toplam = adet * fiyat;
        if (!isNaN(toplam)) {
            document.querySelector("#toplam").value = toplam;
        }
    }
</script>