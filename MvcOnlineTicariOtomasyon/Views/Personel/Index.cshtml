@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.Personel>

@{
    ViewData["Title"] = "Personel Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3><i class="fas fa-users"></i> Personel Listesi</h3>
            <a href="/Personel/PersonelEkle" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Personel Ekle
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tbl1" class="table table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Görsel</th>
                            <th>Departman</th>
                            <th>Güncelle</th>
                            <th>Satışlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PersonelID</td>
                                <td>@item.PersonelAd</td>
                                <td>@item.PersonelSoyad</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PersonelGorsel))
                                    {
                                        <img src="@item.PersonelGorsel" class="rounded-circle border shadow" style="width:50px; height:50px;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                    }
                                </td>
                                <td>@item.Departman.DepartmanAd</td>
                                <td>
                                    <a href="/Personel/PersonelGetir/@item.PersonelID" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Güncelle
                                    </a>
                                </td>
                                <td>
                                    <a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-outline-success">
                                        <i class="fas fa-chart-line"></i> Satışlar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
