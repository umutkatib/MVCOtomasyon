@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.Departman>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between mt-3 mb-5">
    <h3>Departman Listesi</h3>
    <a href="/Departman/DepartmanEkle" class="btn btn-success w-25">Yeni Departman Ekle <i class="fas fa-plus"></i></a>
</div>

<table id="tbl1" class="table table-bordered text-center align-middle">
   <thead>
        <tr>
            <th>Departman Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Detay</th>
        </tr>
   </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmanAd</td>
            <td><a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-warning"><i class="fas fa-edit"></a></td>
            <td><a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger"><i class="fas fa-trash"></a></td>
            <td><a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-outline-success"><i class="fas fa-info-circle"></i></a></td>
        </tr>
    }
</table>
