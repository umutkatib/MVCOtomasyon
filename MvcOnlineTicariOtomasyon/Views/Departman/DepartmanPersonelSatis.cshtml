@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.SatisHareket>

@{
    ViewData["Title"] = "Departman Personel Satış";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-chart-line"></i> Departman Personel Satışları</h3>
        </div>
        <div class="card-body">
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Personel Adı: <b>@ViewBag.dp</b></li>
            </ol>

            <table class="table table-striped table-hover text-center align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Ürün</th>
                        <th>Cari</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                        @* <th>Yazdır</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SatisHareketID</td>
                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                            <td>@item.SatisHareketFiyat.ToString("C2")</td>
                            <td>@item.SatisHareketAdet</td>
                            <td>@item.SatisHareketToplamTutar.ToString("C2")</td>
                            <td>@item.SatisHareketTarih.ToString("dd.MM.yyyy")</td>
                           @*  <td>
                                <a href="#" class="btn btn-outline-success" data-bs-toggle="tooltip" title="Satış fişini yazdır">
                                    <i class="fas fa-print"></i>
                                </a>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

