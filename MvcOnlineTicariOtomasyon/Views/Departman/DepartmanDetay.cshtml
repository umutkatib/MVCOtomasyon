@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.Personel>

@{
    ViewData["Title"] = "Departman Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center">
            <h3><i class="fas fa-building"></i> Departman Detay</h3>
        </div>
        <div class="card-body">
            <!-- Breadcrumb -->
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">
                    <strong>Departman:</strong> <span class="text-primary fw-bold">@ViewBag.dpm</span>
                </li>
            </ol>

            <!-- Personel Tablosu -->
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Personel ID</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Görsel</th>
                            <th>Satışlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PersonelID</td>
                                <td>@item.PersonelAd</td>
                                <td>@item.PersonelSoyad</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PersonelGorsel))
                                    {
                                        <img src="@item.PersonelGorsel" alt="Personel Görseli" class="rounded-circle" width="50" height="50">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                    }
                                </td>
                                <td>
                                    <a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-warning">
                                        <i class="fas fa-chart-line"></i> Satışlar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
