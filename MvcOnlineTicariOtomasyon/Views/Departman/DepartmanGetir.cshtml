@model MvcOnlineTicariOtomasyon.Models.Sinfilar.Departman

@{
    ViewData["Title"] = "Departman Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark text-center">
            <h3><i class="fas fa-edit"></i> Departman Güncelleme</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.DepartmanID)

                <div class="mb-3">
                    @Html.LabelFor(x => x.DepartmanAd, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control", placeholder = "Yeni departman adını girin..." })
                </div>

                <button class="btn btn-warning w-100">
                    <i class="fas fa-save"></i> Departmanı Güncelle
                </button>
            }
        </div>
    </div>
</div>
