@model List<MvcOnlineTicariOtomasyon.Models.Sinfilar.Cari>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-4">
    <h3>Cari Listesi</h3>
    <div class="d-flex gap-3">
        <a href="/Cari/CariEkle" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Yeni Cari Kaydı
        </a>
        <a href="/Cari/PasifCariler" class="btn btn-outline-primary">
            <i class="fas fa-user-times"></i> Pasif Cari Kayıtları
        </a>
    </div>
</div>

<div class="table-responsive">
    <table id="tbl1" class="table table-striped table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Cari ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Mail</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CariId</td>
                    <td>@item.CariAd</td>
                    <td>@item.CariSoyad</td>
                    <td>@item.CariSehir</td>
                    <td><a href="mailto:@item.CariMail">@item.CariMail</a></td>
                    <td>
                        <a href="/Cari/CariSil/@item.CariId"
                           class="btn btn-danger"
                           onclick="return confirm('Bu cariyi silmek istediğinize emin misiniz?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/Cari/CariGetir/@item.CariId" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/Cari/CariSatisGecmis/@item.CariId" class="btn btn-secondary">
                            Satış Geçmişi <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
